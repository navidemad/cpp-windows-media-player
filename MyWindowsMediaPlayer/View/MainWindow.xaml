<Window x:Class="MyWindowsMediaPlayer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="MyWindowsMediaPlayer" Height="768" Width="1024">

    <DockPanel>
            <ListBox x:Name="NavigationPanel" DockPanel.Dock="Top" ItemsSource="{ Binding Pages }" SelectedItem="{ Binding CurrentPage }">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="20" FontWeight="Bold" Margin="10" Text="{ Binding Name }" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" FlowDirection="RightToLeft" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        
            <Frame Source="{ Binding CurrentPage.Page }" NavigationUIVisibility="Hidden" />
    </DockPanel>
    
</Window>
