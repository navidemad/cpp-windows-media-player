<Window x:Class="MyWindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyWindowsMediaPlayer" Height="350" Width="525">
    <Grid>
        <TextBlock FontWeight="Bold" Foreground="DodgerBlue" TextAlignment="Center" HorizontalAlignment="Left" Margin="236,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="271"><Run Language="fr-fr" Text="Current Media"/></TextBlock>
        <Image x:Name="img" Margin="236,38,10,10" />

        <TabControl HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="221">
            <TabItem Header="Playlists" Height="23" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <ListBox ItemsSource="{ Binding PlayListViewModel.Playlists }" SelectedItem="{ Binding PlayListViewModel.CurrentPlaylist }" HorizontalAlignment="Left" Height="235" VerticalAlignment="Top" Width="211">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{ Binding Name }" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Command="{ Binding PlayListViewModel.Add }" FontWeight="Bold" Foreground="White" Background="DodgerBlue" Content="Créer" HorizontalAlignment="Left" Margin="0,240,0,-3" VerticalAlignment="Top" Width="60" Height="28"/>
                    <Button Command="{ Binding PlayListViewModel.Edit }" CommandParameter="{ Binding PlayListViewModel.CurrentPlaylist }" FontWeight="Bold" Foreground="White" Background="DodgerBlue" Content="Editer" HorizontalAlignment="Left" Margin="65,240,0,-3" VerticalAlignment="Top" Width="60" Height="28"/>
                    <Button Command="{ Binding PlayListViewModel.Delete }" CommandParameter="{ Binding PlayListViewModel.CurrentPlaylist }" FontWeight="Bold" Foreground="White" Background="DarkRed" Content="Supprimer" HorizontalAlignment="Left" Margin="130,240,0,-3" VerticalAlignment="Top" Width="81" Height="28"/>
                </Grid>
            </TabItem>
            <TabItem Header="Photos">
                <Grid Background="#FFE5E5E5">
                    <ListBox HorizontalAlignment="Left" Height="268" VerticalAlignment="Top" Width="211"/>
                </Grid>
            </TabItem>
            <TabItem Header="Videos">
                <Grid Background="#FFE5E5E5">
                    <ListBox HorizontalAlignment="Left" Height="268" VerticalAlignment="Top" Width="211" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="Musique">
                <Grid Background="#FFE5E5E5">
                    <ListBox HorizontalAlignment="Left" Height="268" VerticalAlignment="Top" Width="211" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
